<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_full_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Glow behind logo -->
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            android:background="@drawable/bg_glow_circle"
            android:alpha="0.35" />

        <!-- Logo -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logoCard"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Glass Card -->
        <LinearLayout
            android:id="@+id/loginCard"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:padding="26dp"
            android:background="@drawable/bg_glass_card"
            android:elevation="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to KisanBandhu"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:fontFamily="@font/patua_one"
                android:paddingBottom="4dp"
                android:shadowColor="#66000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ar_one_sans"
                android:paddingBottom="20dp"
                android:text="Smart Farming Assistant"
                android:textColor="#CCFFFFFF"
                android:textSize="20sp" />


            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/bg_input_frost"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_person"
                    app:tint="#00F5D4" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Enter Your Name"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A0FFFFFF"
                    android:background="@android:color/transparent" />
            </LinearLayout>


            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/bg_input_frost"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_age"
                    app:tint="#00F5D4" />

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Enter Your Age"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A0FFFFFF"
                    android:background="@android:color/transparent" />
            </LinearLayout>


            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/bg_input_frost"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_phone"
                    app:tint="#00F5D4" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Enter Phone Number"
                    android:inputType="phone"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#A0FFFFFF"
                    android:background="@android:color/transparent" />
            </LinearLayout>


            <!-- OTP Button -->
            <Button
                android:id="@+id/btnGetOtp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Get OTP"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_glow"

                app:backgroundTint="@android:color/transparent"
                android:stateListAnimator="@null" />

            <!-- Guest Login Button -->
            <TextView
                android:id="@+id/tvGuestLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue as Guest"
                android:textColor="#CCFFFFFF"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:fontFamily="@font/ar_one_sans" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>